<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppCompatTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">#000000</item>
        <item name="android:colorControlNormal">#000000</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorLink">#0000FF</item>
        <item name="android:statusBarColor">#ff0000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--<item name="android:popupMenuStyle">@style/popupMenu</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Toolbar popup menu -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="SectionDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="NumberInput">
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:hint">1,000,000</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SearchButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>


    <style name="sectionTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="bigNumber">
        <item name="android:textSize">28sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="tile_normal">
        <!--<item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>-->
        <item name="android:background">#E0E0E0</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">2dp</item>
    </style>



    <style name="PrimeNumbers" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple</item>
        <item name="colorControlActivated">@color/purple</item>
    </style>

    <style name="Factors" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="FactorTrees" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/green_dark</item>
    </style>

    <style name="Default" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>
</resources>