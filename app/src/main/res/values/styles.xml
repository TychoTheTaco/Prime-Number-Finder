<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default themes -->
    <style name="Default" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
    <style name="Default.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>
    <style name="Default.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Default.Dialog" parent="Base.Theme.AppCompat.Light.Dialog"/>
    <style name="Default.PopupOverlay">
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Find Primes Theme -->
    <style name="FindPrimes" parent="Default.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple</item>
    </style>
    <style name="FindPrimes.Activity">
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="FindPrimes.Dialog" parent="Default.Dialog">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple</item>
    </style>
    <style name="FindPrimes.PopupOverlay">
        <item name="android:colorBackground">@color/purple_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Find Factors themes-->
    <style name="FindFactors" parent="Default.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="FindFactors.Activity">
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="FindFactors.Dialog" parent="Default.Dialog">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="FindFactors.PopupOverlay">
        <item name="android:colorBackground">@color/orange_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Prime Factorization themes-->
    <style name="PrimeFactorization" parent="Default.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>
    <style name="PrimeFactorization.Activity">
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="PrimeFactorization.Dialog" parent="Default.Dialog">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>
    <style name="PrimeFactorization.PopupOverlay">
        <item name="android:colorBackground">@color/green_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Least Common Multiple themes-->
    <style name="LCM" parent="Default.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow</item>
    </style>
    <style name="LCM.Activity">
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="LCM.Dialog" parent="Default.Dialog">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow</item>
    </style>
    <style name="LCM.PopupOverlay">
        <item name="android:colorBackground">@color/yellow_light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="DefaultText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Label" parent="DefaultText">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Label.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberInput">
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:hint">1,000,000</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="ColorPicker">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/background_white</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>