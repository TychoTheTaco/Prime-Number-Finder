<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Default" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorControlActivated">@color/accent</item>

    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Default.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!--<item name="android:popupMenuStyle">@style/popupMenu</item>-->
    </style>

    <style name="AppBarOverlay" parent="Default"/>

    <!-- Find Primes Theme -->
    <style name="FindPrimesActivity" parent="Default.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple</item>
        <item name="colorControlActivated">@color/purple</item>
    </style>

    <style name="FindPrimesDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple</item>
        <item name="colorControlActivated">@color/purple</item>
    </style>

    <!-- Find Factors Theme -->
    <style name="FindFactorsActivity" parent="Default.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="FindFactorsDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <!-- Prime Factorization Theme -->
    <style name="PrimeFactorizationActivity" parent="Default.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="PrimeFactorizationDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
    </style>


    <!-- Toolbar popup menu -->
    <style name="PopupOverlay" parent="Default">
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Label" parent="DefaultText">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Label.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberInput">
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:hint">1,000,000</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="ColorPicker">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:background">@drawable/round_rectangle_white</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>