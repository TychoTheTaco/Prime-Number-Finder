<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light Theme -->
    <style name="Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">?android:attr/colorAccent</item>
        <item name="colorControlHighlight">@color/accent_very_light</item>
        <!--<item name="colorBackgroundFloating">@color/white</item>-->
        <item name="android:colorMultiSelectHighlight">@color/accent_very_light</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:textColorPrimaryDisableOnly">@color/item_disabled</item>
        <item name="android:textColor">@color/text_color</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <!--<item name="android:navigationBarColor">#010101</item>-->
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="radioButtonStyle">@style/RadioButton</item>

        <item name="cardBackgroundColor">@color/background_light</item>
    </style>
    <style name="Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>
    <style name="Light.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Light.Dialog" parent="Base.Theme.AppCompat.Light.Dialog"/>
    <style name="Light.PopupOverlay">
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Dark Theme -->
    <style name="Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">#222222</item>
        <item name="colorPrimaryDark">#0c0c0c</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">?android:attr/colorAccent</item>
        <!--<item name="colorControlHighlight">@color/background_dark_5</item>-->
       <!-- <item name="colorBackgroundFloating">@color/background_dark_4</item>-->
        <item name="android:colorMultiSelectHighlight">@color/accent_very_dark</item>

        <!-- Text -->
        <item name="android:textSize">14sp</item>
        <item name="android:textColorPrimary">@color/primary_text_light</item>
        <item name="android:textColorPrimaryDisableOnly">@color/item_disabled_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_light</item>
        <item name="android:textColor">@color/text_color</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:navigationBarColor">#010101</item>

        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="radioButtonStyle">@style/RadioButton</item>

        <item name="cardBackgroundColor">@color/background_dark_light</item>
    </style>
    <style name="Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?android:attr/colorPrimaryDark</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Find Primes Theme -->
    <style name="FindPrimes">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple</item>
    </style>
    <style name="FindPrimes.Dialog" parent="Light.Dialog">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple</item>
    </style>
    <style name="FindPrimes.PopupOverlay">
        <item name="android:colorBackground">@color/purple_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Find Factors themes-->
    <style name="FindFactors">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="FindFactors.Dialog" parent="Light.Dialog">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="FindFactors.PopupOverlay">
        <item name="android:colorBackground">@color/orange_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Prime Factorization themes-->
    <style name="PrimeFactorization">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="PrimeFactorization.PopupOverlay">
        <item name="android:colorBackground">@color/green_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Least Common Multiple themes-->
    <style name="LCM">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <!-- Greatest Common Factor themes-->
    <style name="GCF">
        <item name="colorPrimary">@color/lt_blue</item>
        <item name="colorPrimaryDark">@color/blue_light</item>
        <item name="colorAccent">@color/lt_blue</item>
    </style>

    <style name="Label" parent="Light">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Label.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/primary_text_very_light</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="ColorPicker">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/background_white</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PopupWindowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/popup_window_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_window_exit</item>
    </style>

</resources>