<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Message to display when no active task -->
    <TextView
        android:id="@+id/empty_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_task_selected_message"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/results_view"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="2dp"
                    android:max="1000"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular" />

                <TextView
                    android:id="@+id/textView_search_progress"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_toEndOf="@id/progress_bar"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColor="@color/primary_text"
                        android:textSize="22sp" />

                    <!-- Time elapsed-->
                    <TextView
                        android:id="@+id/textView_elapsed_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/DefaultText" />

            <TextView
                android:id="@+id/prime_factorization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Main content -->
            <com.tycho.app.primenumberfinder.TreeView
                android:id="@+id/factor_tree"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:minHeight="200dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="@dimen/content_padding_top" />

            <TextView
                android:textSize="16sp"
                android:text="Statistics"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_width="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_height="wrap_content" />

            <!-- Time remaining-->
            <TextView
                android:id="@+id/textView_eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/primary_text" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_view_all"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/button_save"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save" />

    </LinearLayout>

</LinearLayout>