<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:padding="8dp"
    android:clipToPadding="false"
    android:layout_height="match_parent">

    <TextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:text="Export options"/>

    <TextView
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:text="File name"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/file_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text=".txt"
            android:includeFontPadding="false"
            android:lines="1"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item separator"
            android:textSize="14sp"/>

        <com.tycho.app.primenumberfinder.CustomRadioGroup
            android:id="@+id/item_separator_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/new_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New line"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other:"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/item_separator"
                    android:paddingStart="4dp"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:layout_width="match_parent"
                    android:hint=","
                    android:includeFontPadding="false"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </com.tycho.app.primenumberfinder.CustomRadioGroup>
    </LinearLayout>

    <Button
        style="@style/Button"
        android:id="@+id/export_button"
        android:layout_width="match_parent"
        android:text="Export"
        android:layout_height="wrap_content" />

</LinearLayout>