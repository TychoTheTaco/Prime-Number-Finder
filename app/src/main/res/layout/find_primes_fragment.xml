<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:theme="@style/FindPrimes">

    <!-- Check primality input -->
    <TextView
        android:id="@+id/number_input_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/primality_input"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/input_number_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <com.tycho.app.primenumberfinder.ui.ValidEditText
            android:id="@id/primality_input"
            style="@style/NumberInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:imeOptions="actionDone" />

        <Button
            android:id="@+id/check_primality_button"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_primality_button" />

    </LinearLayout>

    <!-- Range input -->
    <TextView
        android:id="@+id/input_range_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/editText_input_number"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/input_range_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.tycho.app.primenumberfinder.ui.ValidEditText
                android:id="@+id/search_range_start"
                style="@style/NumberInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionDone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to" />

            <com.tycho.app.primenumberfinder.ui.ValidEditText
                android:id="@+id/search_range_end"
                style="@style/NumberInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionDone" />

            <ImageButton
                android:id="@+id/infinity_button"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_clear"
                android:contentDescription="@string/format_numbers_description"
                android:src="@drawable/ic_infinity_white_24dp"
                android:tint="@color/text_color" />

        </LinearLayout>

        <Button
            android:id="@+id/button_find_primes"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_primes_button" />

    </LinearLayout>

    <TextView
        android:id="@+id/advanced_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?selectableItemBackground"
        android:drawableLeft="@drawable/ic_settings_white_24dp"
        android:drawablePadding="4dp"
        android:drawableTint="@color/black"
        android:gravity="center_vertical"
        android:text="Advanced" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/gray" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>