<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <!-- Message to display when no active task -->
    <TextView
        android:id="@+id/empty_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_task_selected_message"
        android:visibility="visible" />

        <LinearLayout
            android:id="@+id/results_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Top bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/progress_background"
                    android:max="100"
                    android:padding="2dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular" />

                <TextView
                    android:id="@+id/textView_search_progress"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/progress_bar"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="22sp" />

                    <!-- Time elapsed-->
                    <TextView
                        android:id="@+id/textView_elapsed_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/subtitle"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/text"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    <!-- Statistics -->
    <LinearLayout
        android:id="@+id/statistics_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statistics_title"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Time remaining-->
        <TextView
            android:id="@+id/textView_eta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_timer_white_24dp"
            android:drawablePadding="2dp"
            android:drawableTint="@color/black"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

        <!-- Numbers per second-->
        <TextView
            android:id="@+id/textView_numbers_per_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_trending_up_white_24dp"
            android:drawablePadding="2dp"
            android:drawableTint="@color/black"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

        <!-- Primes per second-->
        <TextView
            android:id="@+id/textView_primes_per_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_trending_up_white_24dp"
            android:drawablePadding="2dp"
            android:drawableTint="@color/black"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Buttons -->
    <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="4dp">

        <ImageButton
            android:id="@+id/view_all_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toStartOf="@id/center"
            android:tooltipText="@string/view_all"
            android:background="@drawable/circle_white"
            android:backgroundTint="@color/button_color"
            android:contentDescription="@string/view_all"
            android:elevation="2dp"
            android:src="@drawable/ic_menu_white_24dp" />

        <View
            android:id="@+id/center"
            android:layout_width="56dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/pause_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:tooltipText="Pause / Resume"
            android:layout_margin="4dp"
            android:background="@drawable/circle_white"
            android:backgroundTint="@color/button_color"
            android:contentDescription="Pause / Resume"
            android:elevation="2dp"
            android:src="@drawable/ic_pause_white_24dp" />

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/center"
            android:tooltipText="@string/save"
            android:background="@drawable/circle_white"
            android:backgroundTint="@color/button_color"
            android:contentDescription="@string/save"
            android:elevation="2dp"
            android:src="@drawable/ic_save_white_24dp" />

    </RelativeLayout>
</LinearLayout>