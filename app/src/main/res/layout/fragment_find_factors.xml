<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@+id/coordinatorLayout_main"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Number input -->
        <TextView
            android:id="@+id/input_number_label"
            style="@style/SectionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/editText_input_number"
            android:text="@string/factor_input_number_description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@id/editText_input_number"
                style="@style/NumberInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_find_factors"
                style="@style/SearchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_factors_button"/>

        </LinearLayout>

        <!-- Search status -->
        <include
            android:id="@+id/search_results"
            layout="@layout/search_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:visibility="invisible"/>

        <!-- Statistics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="48dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textColor="@color/secondary_text"
                android:textSize="18sp"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/statistics_viewpager"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:id="@+id/page_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_white"
                    android:backgroundTint="@color/accent"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_white"
                    android:backgroundTint="@color/accent"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_white"
                    android:backgroundTint="@color/accent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Screen dim -->
    <View
        android:id="@+id/screenDim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#000000"/>

    <!-- Bottom sheet -->
    <include
        android:id="@+id/bottom_sheet"
        layout="@layout/bottom_sheet_factors"/>

</android.support.design.widget.CoordinatorLayout>
