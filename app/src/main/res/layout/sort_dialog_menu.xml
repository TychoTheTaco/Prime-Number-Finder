<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="150dp"
    android:background="@drawable/round_rectangle_white"
    android:backgroundTint="@color/purple_light"
    android:padding="8dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/ripple_clear"
        android:gravity="center_vertical"
        android:layout_height="48dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawablePadding="4dp"
            style="@style/DefaultText"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/round_date_range_24"
            android:text="Date"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/ripple_clear"
        android:layout_height="48dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawablePadding="4dp"
            style="@style/DefaultText"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/round_sort_24"
            android:text="Size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>