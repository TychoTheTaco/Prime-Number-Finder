<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:theme="@style/LCM">

    <!-- Message to display when no active task -->
    <TextView
        android:id="@+id/empty_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_task_selected_message"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/results_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Top bar -->
        <include layout="@layout/progress_banner" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Task controls -->
    <com.tycho.app.primenumberfinder.ui.TaskControlBubble android:id="@+id/task_control_bubble" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>