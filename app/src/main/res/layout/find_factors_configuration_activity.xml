<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:theme="@style/FindFactors"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/app_bar" />

    <!-- Number input -->
    <TextView
        android:id="@+id/number_input_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/find_factors_input_number_description" />

    <com.tycho.app.primenumberfinder.ui.ValidEditText
        android:id="@+id/number_input"
        style="@style/NumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:minWidth="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />

    <CheckBox
        android:id="@+id/notify_when_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Notify when finished" />

    <CheckBox
        android:id="@+id/auto_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Auto-save when finished" />

</LinearLayout>