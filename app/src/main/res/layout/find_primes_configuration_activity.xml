    <!-- Range input -->
    <TextView
        style="@style/SectionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:text="Enter a range to search for prime numbers (inclusive)." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">

        <EditText
            android:id="@+id/search_range_start"
            style="@style/NumberInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="@style/SectionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to" />

        <EditText
            android:id="@+id/search_range_end"
            style="@style/NumberInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/infinity_button"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/content_description_infinity_button"
            android:src="@drawable/ic_infinity_white_24dp"
            android:tint="@android:color/black" />

        <!--<Button
            android:id="@+id/button_find_primes"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_primes_button" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_method_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_primes_search_method_label"
            android:textSize="14sp"/>

        <RadioGroup
            android:id="@+id/radio_group_search_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/brute_force"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_primes_search_method_brute_force"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/sieve_of_eratosthenes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_primes_search_method_sieve_of_eratosthenes"
                android:textSize="14sp"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SectionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Threads"/>

        <EditText
            style="@style/NumberInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="Notify when finished"
        android:layout_height="wrap_content" />

    <CheckBox
        android:layout_width="wrap_content"
        android:text="Auto-save when finished"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_height="wrap_content" />

</LinearLayout>