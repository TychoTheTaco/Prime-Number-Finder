<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- Time elapsed -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_elapsed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_timer_black_24dp"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="2dp"
            android:text="Time elapsed"
            android:textColor="@color/primary_text"/>

    </LinearLayout>

    <!-- Numbers scanned per second -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_numbers_per_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="2dp"
            android:text="Numbers scanned per second"
            android:textColor="@color/primary_text"/>

    </LinearLayout>

    <!-- Primes found per second -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_primes_per_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_arrow_left"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="2dp"
            android:text="Primes found per second"
            android:textColor="@color/primary_text"/>

    </LinearLayout>

    <!-- Average check time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_average_check_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="2dp"
            android:text="Average check time"
            android:textColor="@color/primary_text"/>

    </LinearLayout>

</LinearLayout>