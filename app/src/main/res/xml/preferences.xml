<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/general">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="allowBackgroundThreads"
            android:summary="@string/preference_summary_allow_background_threads"
            android:title="@string/preference_title_allow_background_threads"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/quick_copy">

        <SwitchPreference
            android:defaultValue="true"
            android:key="quickCopy"
            android:summary="@string/quick_copy_description"
            android:title="@string/quick_copy_title"/>

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="quickCopyKeepFormatting"
            android:dependency="quickCopy"
            android:summary="@string/quick_copy_keep_formatting_description"
            android:title="@string/quick_copy_keep_formatting_title"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/privacy">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="allowAnalytics"
            android:summary="@string/allow_analytics_description"
            android:title="@string/allow_analytics_title"/>

    </PreferenceCategory>

</PreferenceScreen>
