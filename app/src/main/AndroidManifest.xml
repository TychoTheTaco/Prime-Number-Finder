<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.tycho.app.primenumberfinder"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".PrimeNumberFinder"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/Default"
            android:name=".activities.ActivityListFiles"
            android:label="Saved Files"/>

        <activity
            android:theme="@style/Default"
            android:name=".activities.DisplayFileContentsActivity"
            android:label="Saved Files"/>

        <provider
            android:name=".Helpers.CustomContentProvider"
            android:authorities="com.tycho.app.primenumberfinder"
            android:exported="true"/>
    </application>

</manifest>
