<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tycho.app.primenumberfinder"
    android:versionCode="5"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <application
        android:name="com.tycho.app.primenumberfinder.PrimeNumberFinder"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity
            android:name="com.tycho.app.primenumberfinder.activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tycho.app.primenumberfinder.activities.ActivityListFiles"
            android:label="Saved Files"
            android:theme="@style/Default" />
        <activity
            android:name="com.tycho.app.primenumberfinder.activities.DisplayFileContentsActivity"
            android:label="Saved Files"
            android:theme="@style/Default" />

        <provider
            android:name="com.tycho.app.primenumberfinder.Helpers.CustomContentProvider"
            android:authorities="com.tycho.app.primenumberfinder"
            android:exported="true" />
    </application>

</manifest>