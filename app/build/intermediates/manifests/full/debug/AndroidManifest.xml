<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tycho.app.primenumberfinder"
    android:versionCode="5"
    android:versionName="1.2.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <application
        android:name="com.tycho.app.primenumberfinder.PrimeNumberFinder"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Default.NoActionBar" >
        <activity
            android:name="com.tycho.app.primenumberfinder.activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tycho.app.primenumberfinder.modules.savedfiles.activities.SavedFilesListActivity"
            android:label="Saved Files"
            android:theme="@style/Default.NoActionBar" />
        <activity
            android:name="com.tycho.app.primenumberfinder.modules.savedfiles.activities.DisplayPrimesActivity"
            android:label="Primes"
            android:theme="@style/PrimeNumbers" />
        <activity
            android:name="com.tycho.app.primenumberfinder.modules.savedfiles.activities.DisplayFactorsActivity"
            android:label="Factors"
            android:theme="@style/Factors" />
        <activity
            android:name="com.tycho.app.primenumberfinder.modules.savedfiles.activities.DisplayPrimeFactorizationActivity"
            android:label="Prime Factorization"
            android:theme="@style/FactorTrees" />

        <provider
            android:name="com.tycho.app.primenumberfinder.Helpers.CustomContentProvider"
            android:authorities="com.tycho.app.primenumberfinder"
            android:exported="true" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>