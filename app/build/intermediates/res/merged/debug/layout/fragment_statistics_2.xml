<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="@dimen/stat_view_height"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_label_numbersPerSecond"
            style="@style/sectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/stat_title_height"
            android:gravity="top|center_horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:text="Numbers scanned\nper second"
            android:textSize="13sp"/>

        <com.tycho.app.primenumberfinder.SpeedometerView
            android:id="@+id/numbersPerSecond"
            android:layout_width="80dp"
            android:layout_height="80dp"
            custom:unit="NPS"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="@dimen/stat_view_height"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_label_primesPerSecond"
            style="@style/sectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/stat_title_height"
            android:gravity="top|center_horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:text="Primes found\nper second"
            android:textSize="14sp"/>

        <com.tycho.app.primenumberfinder.SpeedometerView
            android:id="@+id/primesPerSecond"
            android:layout_width="80dp"
            android:layout_height="80dp"
            custom:unit="PPS"/>
    </LinearLayout>

</LinearLayout>